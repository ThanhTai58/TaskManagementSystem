@model SelectList
@{
    ViewData["Title"] = "Delete User";
}

<h1 class="mb-4 text-center">Delete User</h1>
<hr />

<h3 class="mb-3">All Users:</h3>
<ul class="mb-2" style="width: 300px;">
    @foreach (var user in ViewBag.AllUsers)
    {
        <li class="list-group-item style="width: 100%;">@user.Email</li>
    }
</ul>

<h3 class="mb-3">Select User to Delete:</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DeleteUser">
            <div class="mb-2" style="width: 200px;">
                <select name="role" asp-items="Model" class="form-select" style="width: 100%;">
                    <option value="">Select User</option>
                </select>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
