@model Dictionary<AppUser, IList<string>>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4 text-center">All Users with Roles</h1>
<hr />
<div class="mb-3">
    <a asp-action="CreateRole" class="btn btn-primary">Create Role</a>
    <a asp-action="DeleteRole" class="btn btn-danger ms-2">Delete Role</a>
    <a asp-action="DeleteUser" class="btn btn-warning ms-2">Delete User</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Roles</th>
            <th>Daily Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Key.Email</td>
                <td>
                    @foreach(var role in item.Value)
                    {
                        <div>@role</div>
                    }
                </td>
                <td>@item.Key.DailySalary</td>
                <td>
                    <a asp-action="AssignRoleToUser" asp-route-userid="@item.Key.Id" class="btn btn-outline-primary btn-sm">Assign Role</a>
                    <a asp-action="DeleteUserRole" asp-route-userid="@item.Key.Id" class="btn btn-outline-danger btn-sm ms-2">Delete User Role</a>
                    <a asp-action="DefineDailySalary" asp-route-id="@item.Key.Id" class="btn btn-outline-secondary btn-sm ms-2">Define Salary</a>               
                </td>
            </tr>
        }
    </tbody>
</table>
