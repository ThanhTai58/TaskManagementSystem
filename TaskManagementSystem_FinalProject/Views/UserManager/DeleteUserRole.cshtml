@model SelectList
@{
    ViewData["Title"] = "Delete User Role";
}

<h1 class="mb-4 text-center">Delete User Role</h1>
<hr />

<h3 class="mb-3">User Name: @ViewBag.User.Email</h3>
<h4 class="mb-3">@ViewBag.User.Email Roles:
<div class="d-flex flex-wrap">
    @foreach (var role in ViewBag.UserRoles)
    {
        <div class="badge bg-secondary text-white m-1">@role</div>
    }
</div>
</h4>

<form method="post" asp-action="DeleteUserRole" asp-route-userid="@ViewBag.User.Id">
    <div class="mb-2" style="width: 200px;">
        <select name="role" asp-items="Model" class="form-select" style="width: 100%;">
            <option value="">Select Role</option>
        </select>
    </div>
    <button type="submit" class="btn btn-danger mb-2 me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mb-2">Back to List</a>
</form>




