@model SelectList
@{
    ViewData["Title"] = "AssignRoleToUser";
}

<h1 class="mb-4 text-center">AssignRoleToUser</h1>
<hr />
<h3>User Name: @ViewBag.User.Email</h3>
<h4>
    @ViewBag.User.Email Roles:
    <div class="d-flex flex-wrap">
        @foreach (var role in ViewBag.UserRoles)
        {
            <div class="badge bg-secondary text-white m-1">@role</div>
        }
    </div>
</h4>

<form method="post" asp-action="AssignRoleToUser" asp-route-userid="@ViewBag.User.Id">
    <div class="mb-2" style="width: 200px;">
        <select name="role" asp-items="Model" class="form-select" style="width: 100%;">
            <option value="">Select Role</option>
        </select>
    </div>
    <div class="form-group">
        <div class="mb-3">
            <button type="submit" class="btn btn-primary me-2">Assign Role</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

</form>
