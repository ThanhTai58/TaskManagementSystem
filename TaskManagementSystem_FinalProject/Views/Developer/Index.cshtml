@model IEnumerable<TaskManagementSystem_FinalProject.Models.AppTask>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.UserName's All Tasks</h1>
<hr />
<h4>
    <div>
        Number Of Notice: <a asp-action="NoticePage">@ViewBag.NumberOfNotice notice</a>
        @if (ViewBag.NumberOfNotice > 0)
        {
            <a asp-action="NoticePage">@ViewBag.NumberOfNotice notice</a>
        }
    </div>
</h4>

<div class="mt-3 mb-3">
    <a asp-action="CreateTaskNotice" class="btn btn-primary">Generate Notices</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Complete Percentage</th>
            <th>Comment</th>
            <th>Project</th>
            <th>Assigned To</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.CompletePercentage)</td>
                <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                <td>@Html.DisplayFor(modelItem => item.Project.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.AppUser.UserName)</td>
                <td>@item.DeadLine.ToString("MM/dd/yyyy")</td>
                <td>
                    <!-- Các liên kết thao tác -->
                    <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Create</a>
                    <a asp-action="EditPercentage" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Edit Complete Percentage</a>
                    <a asp-action="UrgentNote" asp-route-userId="@ViewBag.UserId" asp-route-taskId="@item.Id" class="btn btn-outline-warning btn-sm">Urgent Note</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    @* Hiển thị liên kết chỉ khi CompletePercentage == 100 *@
                    @if (item.CompletePercentage == 100)
                    {
                        <a asp-action="EditComment" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Leave comment</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
