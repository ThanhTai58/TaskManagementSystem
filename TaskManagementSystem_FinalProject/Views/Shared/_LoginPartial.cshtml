@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello <span style="color: #007bff;">@User.Identity?.Name!</span>
            </a>
        </li>

    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
    </li>
}
else
{
        <li class="nav-item" style="margin-right: 3px;">
            <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

}
</ul>
