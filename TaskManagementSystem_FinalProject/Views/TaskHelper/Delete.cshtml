@model TaskManagementSystem_FinalProject.Models.AppTask

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Delete Task</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Task Information</h4>
        <dl class="row">
            <dt class="col-sm-3">Task Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Completion Percentage:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CompletePercentage)</dd>

            <dt class="col-sm-3">Comment:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Comment)</dd>

            <dt class="col-sm-3">Project Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Project.Name)</dd>

            <dt class="col-sm-3">Assigned User:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.AppUser.UserName)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <h3>Are you sure you want to delete this task?</h3>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
