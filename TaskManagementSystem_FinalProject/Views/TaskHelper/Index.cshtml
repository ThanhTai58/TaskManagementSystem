@model IEnumerable<TaskManagementSystem_FinalProject.Models.AppTask>

@{
    ViewData["Title"] = "Index";
}

<h1 class ="mb-4 text-center">All Tasks</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Complete Percentage</th>
            <th>Comment</th>
            <th>Project</th>
            <th>Assigned To</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => task.Name)</td>
                <td>@Html.DisplayFor(modelItem => task.CompletePercentage)</td>
                <td>@Html.DisplayFor(modelItem => task.Comment)</td>
                <td>@Html.DisplayFor(modelItem => task.Project.Name)</td>
                <td>@Html.DisplayFor(modelItem => task.AppUser.UserName)</td>
                <td>@Html.DisplayFor(modelItem => task.DeadLine)</td>
                <td>
                    <a asp-action="AssignTaskToProject" asp-route-id="@task.Id" class="btn btn-outline-primary btn-sm">Assign Task To Project</a>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-outline-info btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-outline-secondary btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
